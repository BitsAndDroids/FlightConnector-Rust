{
  "identifier": "main",
  "$schema": "../gen/schemas/desktop-schema.json",
  "local": true,
  "windows": ["bits-and-droids-connector"],
  "permissions": [
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.tauri.app" },
        { "url": "http://localhost:3000/*" },
        { "url": "https://www.bitsanddroids.com/api/bug_reports" },
        { "url": "http://localhost:3000/api/bug_reports" }
      ],
      "deny": [{ "url": "https://private.tauri.app" }]
    },
    "http:allow-fetch",
    "dialog:allow-message",
    "dialog:allow-open",
    "core:path:default",
    "core:webview:allow-create-webview",
    "core:webview:allow-create-webview-window",
    "core:event:default",
    "core:window:allow-create",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "store:allow-delete",
    "store:allow-keys",
    "store:default",
    "log:default",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "dialog:default",
    "fs:read-all",
    "fs:default"
  ]
}
